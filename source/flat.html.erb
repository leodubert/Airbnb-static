

<% flat = data.flats[owner] %>

<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path flat.picture %>');"> </div>
  <div class="header-flat">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-1">
          <div class="header-flat-details">
          <div class="row">
          <div class="col-xs-12 col-sm-3">
            <div class="header-flat-owner">
               <%= image_tag flat.owner_picture, class: "avatar avatar-large" %>
               <p> <%=flat.owner_name %> </p>
            </div>
            </div>
            <div class="col-xs-12 col-sm-9">
              <div class="header-flat-name">
                <h3> <%=flat.summary%></h3>
                <p> <%=flat.city%></p>
                <i class="fa fa-star" style="color: #ffb400"></i>
                <i class="fa fa-star" style="color: #ffb400"></i>
                <i class="fa fa-star" style="color: #ffb400"></i>
                <i class="fa fa-star" style="color: #cacccd"></i>
                <i class="fa fa-star" style="color: #cacccd"></i>
              </div>
              </div>
            </div>
           </div>
          </div>

        <div class="col-xs-12 col-sm-4">
          <form action="#" class="action">
            <h4>Book this amazing flat</h4>
            <div class="form-group form-inline">
              <div class="row">
                <div class="col-xs-6"><input type="text" class="form-control" placeholder="checkin" id="checkin"></div>
                <div class="col-xs-6"><input type="text" class="form-control" placeholder="checkout"></div>
              </div>
            </div>
            <div class="form-group">
            <select name="" id="guests" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
          </div>
          <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
          </form>
        </div>
        </div>
      </div>
    </div>
  </div>



<div class="flat-description">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
      <h2>About this flat</h2>
      <p> <%=flat.summary%></p>
      </div>
    </div>
  </div>
</div>



